<%= form_for @post do |f| %>
<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    <%= js add_gritter(error, title: "Overtime app", sticky: false, image: :notice, time: 10000) %>
  <% end %>
<% end %>
  <%= f.date_field :date %>
  <%= f.text_field :rationale %>
  <%= f.submit 'Save' %>
<% end %>
