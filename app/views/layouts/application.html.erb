<!DOCTYPE html>
<html>
  <head>
    <title>OvertimeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <!-- Navbar -->
      <%= render partial: 'shared/navbar' %>
      <!-- Navbar end -->
      <%= yield %>
      <%= js add_gritter(flash[:notice], title: "Overtime app", sticky: false, image: :notice, time: 1000) %>
    </div>
  </body>
</html>
